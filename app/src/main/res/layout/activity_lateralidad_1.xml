<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".lateralidad.Lateralidad_1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Lateralidad 1"
        android:textSize="@dimen/text_size_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/btnInstruccionesLateralidad1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Instrucciones"
            android:background="#6663C3"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableLeft="@android:drawable/ic_lock_silent_mode_off"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="@drawable/border_layout_competencia_lateralidad_1"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:backgroundTint="@color/blue" />

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp"></Space>

        <ImageView
            android:id="@+id/imgCar1Instrucciones"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/coche"
           />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"></Space>

        <ImageView
            android:id="@+id/imgCar2Instrucciones"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/cocheinvertido" />

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp"></Space>

        <androidx.cardview.widget.CardView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:backgroundTint="@color/orange" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp"></Space>

        <ImageView
            android:id="@+id/car1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/coche"/>

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"></Space>

        <ImageView
            android:id="@+id/car2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/cocheinvertido" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn1_car1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/blue"
            android:gravity="top"
            android:foreground="?android:attr/selectableItemBackground">
        </Button>

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp"></Space>

        <Button
            android:id="@+id/btn2_car1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/orange"
            android:gravity="top"
            android:foreground="?android:attr/selectableItemBackground">

        </Button>

        <Space
            android:layout_width="60dp"
            android:layout_height="0dp"></Space>

        <Button
            android:id="@+id/btn3_car2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/blue"
            android:gravity="top"
            android:foreground="?android:attr/selectableItemBackground">

        </Button>

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp"></Space>

        <Button
            android:id="@+id/btn4_car2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/orange"
            android:gravity="top"
            android:foreground="?android:attr/selectableItemBackground">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/car3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/coche" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"></Space>

        <ImageView
            android:id="@+id/car4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/cocheinvertido" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"></Space>

        <ImageView
            android:id="@+id/car5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/cocheinvertido" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal">

        <Space
            android:layout_width="30dp"
            android:layout_height="0dp"></Space>
        <Button
            android:id="@+id/btn5_car3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/blue"
            android:gravity="top"
            android:foreground="?android:attr/selectableItemBackground">

        </Button>

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp"></Space>

        <Button
            android:id="@+id/btn6_car3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/orange"
            android:gravity="top"
            android:foreground="?android:attr/selectableItemBackground">

        </Button>

        <Space
            android:layout_width="40dp"
            android:layout_height="0dp"></Space>

        <Button
            android:id="@+id/btn7_car4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/blue"
            android:gravity="top"
            android:foreground="?android:attr/selectableItemBackground"></Button>

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp"></Space>

        <Button
            android:id="@+id/btn8_car4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/orange"
            android:gravity="top"
            android:foreground="?android:attr/selectableItemBackground">

        </Button>

        <Space
            android:layout_width="40dp"
            android:layout_height="0dp"></Space>

        <Button
            android:id="@+id/btn9_car5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/blue"
            android:gravity="top"
            android:foreground="?android:attr/selectableItemBackground">

        </Button>

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp"></Space>

        <Button
            android:id="@+id/btn10_car5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/orange"
            android:gravity="top"
            android:foreground="?android:attr/selectableItemBackground">

        </Button>

        <Space
            android:layout_width="30dp"
            android:layout_height="0dp"></Space>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSalirCA"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Salir" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"></Space>

        <Button
            android:id="@+id/btnSiguienteLateralidad1"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Siguiente"
            android:foreground="?android:attr/selectableItemBackground"/>
    </LinearLayout>

</LinearLayout>