<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".memoriaDeTrabajo.MemoriaVisual">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnInstruccionesMemoriaVisual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:drawableLeft="@android:drawable/ic_lock_silent_mode_off"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/Instrucciones" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnIniciarPruebaMemoriaVisual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="Iniciar prueba" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/imgMemoriaVisual1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/circulobn"
                    android:foreground="?android:attr/selectableItemBackground"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgMemoriaVisual2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/cuadrado"
                    android:foreground="?android:attr/selectableItemBackground"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgMemoriaVisual3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/cruz"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/imgMemoriaVisual4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/estrella"
                    android:foreground="?android:attr/selectableItemBackground"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgMemoriaVisual5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/triangulo"
                    android:foreground="?android:attr/selectableItemBackground"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgMemoriaVisual6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/trianguloinvertido"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/imgMemoriaVisual7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/pentagono"
                    android:foreground="?android:attr/selectableItemBackground"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgMemoriaVisual8"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/cubo"
                    android:foreground="?android:attr/selectableItemBackground"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgMemoriaVisual9"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/rectangle"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMenuMemoriaVisual"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="menu"
                    android:textSize="12sp" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/btnSiguienteMemoriaVisual"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Siguiente"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>