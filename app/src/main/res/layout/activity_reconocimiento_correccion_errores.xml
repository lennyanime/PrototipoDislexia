<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".rendimientoDesempeño.Reconocimiento_CorreccionErrores">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="left"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnInstruccionesCorreccionErrores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6663C3"
            android:drawableLeft="@android:drawable/ic_lock_silent_mode_off"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/Instrucciones" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/prueba1"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v  e  r  b  e"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/botonesPrueba1"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnOpcion1Palabra1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="q"
            android:tag="q"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnOpcion2Palabra1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="d"
            android:tag="d"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnOpcion3Palabra1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="p"
            android:tag="p"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/prueba2"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="v  o  t  a  s"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/botonesPrueba2"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnOpcion1Palabra2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="q" />

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnOpcion2Palabra2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="d" />

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnOpcion3Palabra2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="b" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/prueba3"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="d  u  e  r  t  a"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/botonesPrueba3"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnOpcion1Palabra3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="p" />

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnOpcion2Palabra3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="d" />

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnOpcion3Palabra3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="q" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCorreccionErrores"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="menú" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnSiguienteCorreccionErrores"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Siguiente"
            android:enabled="false"/>
    </LinearLayout>

</LinearLayout>