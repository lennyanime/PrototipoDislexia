<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".rendimientoDesempeño.ComprensionLectura">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="left"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnInstruccionesComprensionLectura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6663C3"
            android:drawableLeft="@android:drawable/ic_lock_silent_mode_off"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/Instrucciones" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:gravity="center|center_horizontal"
        android:text="Preguntas"
        android:textSize="40sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="start"
                    android:text="1. ¿?"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/chkRespuesta1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="opción1"
                    android:tag="incorrecto"/>

                <RadioButton
                    android:id="@+id/chkRespuesta2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="opción2"
                    android:tag="correcto"/>

                <RadioButton
                    android:id="@+id/chkRespuesta3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="opción3"
                    android:tag="incorrecto"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="start"
                    android:text="2. ¿?"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/chkRespuesta4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="opción1"
                    android:tag="incorrecto"/>

                <RadioButton
                    android:id="@+id/chkRespuesta5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="opción2"
                    android:tag="incorrecto"/>

                <RadioButton
                    android:id="@+id/chkRespuesta6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="opción3"
                    android:tag="correcto"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="start"
                    android:text="3. ¿?"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/chkRespuesta7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="opción1"
                    android:tag="incorrecto"/>

                <RadioButton
                    android:id="@+id/chkRespuesta8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="opción2"
                    android:tag="incorrecto"/>

                <RadioButton
                    android:id="@+id/chkRespuesta9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="opción3"
                    android:tag="correcto"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMenuPrincipalComprensionLectura"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:text="Salir" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/btnSiguienteComprensionLectura"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:text="Siguiente" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>