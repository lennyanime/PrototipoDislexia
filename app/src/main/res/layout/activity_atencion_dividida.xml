<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".funcionesEjecutivas.AtencionDividida">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnInstruccionesAtencionDividida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:gravity="center"
            android:text="@string/Instrucciones"
            android:layout_margin="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableLeft="@android:drawable/ic_lock_silent_mode_off" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnIniciarPruebaAtencionDividida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:gravity="center"
            android:text="Iniciar prueba"
            android:layout_margin="5dp"
            android:foreground="?android:attr/selectableItemBackground"
             />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_margin="20dp">


                <ImageView
                    android:id="@+id/imgCruz1AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/cruz"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="cruz"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgCirculo1AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/circulobn"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="circulo"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgTriangulo1AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/trianglebn"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="triangulo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgPentagono1AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/pentagono"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="pentagono"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgEstrella1AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/estrella"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="estrella"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgTrapecio1AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/trapecio"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="trapecio"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/imgCuadrado1AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/cuadrado"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="cuadrado"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgTrianguloInvertido1AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/trianguloinvertido"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="trianguloInvertido"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgRectangulo1AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/rectangle"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="rectangulo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/imgCirculo2AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/circulobn"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="circulo"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgTrapecio2AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/trapecio"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="trapecio"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgTrianguloInvertido2AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/trianguloinvertido"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="trianguloInvertido"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgCruz2AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/cruz"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="cruz"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgEstrella2AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/estrella"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="estrella"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgRectangulo2AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/rectangle"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="rectangulo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/imgPentagono2AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/pentagono"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="pentagono"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgTriangulo2AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/trianglebn"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="triangulo"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgCuadrado2AtencionDividida"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/cuadrado"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="cuadrado"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMenuPrincipalAtencionDividida"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Menú" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="0dp"/>

                <Button
                    android:id="@+id/btnSiguienteAtencionDividida"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Siguiente" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>