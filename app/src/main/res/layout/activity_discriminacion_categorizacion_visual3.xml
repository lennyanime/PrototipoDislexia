<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".procesosPerceptivos.DiscriminacionCategorizacionVisual3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Discriminación y categorización visual3"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img13DCV"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/circulobn" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/img14DCV"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/trapecio" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img15DCV"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/pentagono" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/img16DCV"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:tag="no"
            app:srcCompat="@drawable/octagono" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img17DCV"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:tag="si"
            app:srcCompat="@drawable/trianglebn"/>

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/img18DCV"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/pentagono" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMenuDCV"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Salir" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnSiguienteDiscriminacionV"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Siguiente" />

    </LinearLayout>

</LinearLayout>