<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".procesosPerceptivos.DiscriminacionCategorizacionVisual3">

    <Space
        android:layout_width="0dp"
        android:layout_height="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img13DCV"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/circulobn" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/img14DCV"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/trapecio" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img15DCV"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/pentagono" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/img16DCV"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:tag="no"
            app:srcCompat="@drawable/octagono" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img17DCV"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:tag="si"
            app:srcCompat="@drawable/trianglebn"/>

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/img18DCV"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/pentagono" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnSiguienteDiscriminacionV"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.801" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>