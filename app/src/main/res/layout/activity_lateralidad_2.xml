<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".lateralidad.Lateralidad_2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Lateralidad"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6663C3"
            android:gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/Instrucciones"
            android:drawableLeft="@android:drawable/ic_lock_silent_mode_off" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imgPez1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity=""
            app:srcCompat="@drawable/pez" />

        <Space
            android:layout_width="0dp"
            android:layout_height="60dp"></Space>


        <ImageView
            android:id="@+id/dragTargetImageViewBoat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:tag="barco"
            app:srcCompat="@drawable/navegacion" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgPez2"
            android:layout_width="60dp"
            android:layout_height="65dp"
            app:srcCompat="@drawable/pez_payaso" />

        <Space
            android:layout_width="200dp"
            android:layout_height="0dp"></Space>

        <ImageView
            android:id="@+id/dragImageViewBoat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tag="barco"
            app:srcCompat="@drawable/navegacion" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:gravity="bottom"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/dragTargetFalseImageViewBoat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#FFFFFF"

            android:tag="barcoFalse"
            app:srcCompat="@drawable/navegacion" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSalirLateralidad2"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Salir" />

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp"></Space>

        <Button
            android:id="@+id/btnSiguienteLateralidad2"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Siguiente" />
    </LinearLayout>

</LinearLayout>