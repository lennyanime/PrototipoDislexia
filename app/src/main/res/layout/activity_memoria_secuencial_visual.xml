<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".memoriaDeTrabajo.MemoriaSecuencialVisual">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnInstruccionesMemoriaSecuencialVisual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:drawableLeft="@android:drawable/ic_lock_silent_mode_off"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/Instrucciones" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMemoriaSecuencialVisual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2196F3"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="iniciar prueba" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPosicion1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:visibility="invisible"
            app:srcCompat="@drawable/triangulo"
            android:foreground="?android:attr/selectableItemBackground"/>

        <ImageView
            android:id="@+id/imgFake"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/border"
            android:visibility="invisible"
            app:srcCompat="@drawable/circulo"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPosicion2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:visibility="invisible"
            app:srcCompat="@drawable/octagono"
            android:foreground="?android:attr/selectableItemBackground"/>

        <Space
            android:layout_width="24dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgPosicion3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:visibility="invisible"
            app:srcCompat="@drawable/estrella"
            android:foreground="?android:attr/selectableItemBackground"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPosicion4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:visibility="invisible"
            app:srcCompat="@drawable/pentagono"
            android:foreground="?android:attr/selectableItemBackground"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/imgPosicion5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:visibility="invisible"
            app:srcCompat="@drawable/circulobn"
            android:foreground="?android:attr/selectableItemBackground"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/imgPosicion6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:visibility="invisible"
            app:srcCompat="@drawable/rectangle"
            android:foreground="?android:attr/selectableItemBackground"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnMenuMSV"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="MenÃº"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.212"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btnSiguienteMemoriaSV"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="24dp"
            android:text="Siguiente"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.769"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>