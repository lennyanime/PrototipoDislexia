<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".memoriaDeTrabajo.MemoriaSecuencialVisual">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:gravity="center|center_horizontal"
        android:text="Memoria de trabajo secuencial visual"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnInstruccionesMemoriaSecuencialVisual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:drawableLeft="@android:drawable/ic_lock_silent_mode_off"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/Instrucciones" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSecuenciaMemoriaSecuencialVisual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="ver secuencia" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPosicion1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:visibility="invisible"
            app:srcCompat="@drawable/triangulo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPosicion2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:visibility="invisible"
            app:srcCompat="@drawable/triangulo" />

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/imgPosicion3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:visibility="invisible"
            app:srcCompat="@drawable/estrella" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPosicion4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:visibility="invisible"
            app:srcCompat="@drawable/triangulo" />

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/imgPosicion5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:visibility="invisible"
            app:srcCompat="@drawable/estrella" />

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/imgPosicion6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:visibility="invisible"
            app:srcCompat="@drawable/rectangle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMenuMSV"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="MenÃº" />

        <Button
            android:id="@+id/btnSiguienteMemoriaSV"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="Siguiente" />
    </LinearLayout>

</LinearLayout>