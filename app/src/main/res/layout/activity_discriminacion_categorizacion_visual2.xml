<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".procesosPerceptivos.DiscriminacionCategorizacionVisual3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img7PruebaDiscriminacionVisual"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:srcCompat="@drawable/cubo"
                tools:visibility="visible" />

            <Space
                android:layout_width="50dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/img8PruebaDiscriminacionVisual"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:srcCompat="@drawable/triangulo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img9PruebaDiscriminacionVisual"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:srcCompat="@drawable/circulobn" />

            <Space
                android:layout_width="50dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/img10PruebaDiscriminacionVisual"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:tag="no"
                android:visibility="visible"
                app:srcCompat="@drawable/octagono" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img11PruebaDiscriminacionVisual"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:tag="si"
                android:visibility="visible"
                app:srcCompat="@drawable/triangulo" />

            <Space
                android:layout_width="50dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/img12PruebaDiscriminacionVisual"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:srcCompat="@drawable/trianglebn" />

        </LinearLayout>
    </LinearLayout>


