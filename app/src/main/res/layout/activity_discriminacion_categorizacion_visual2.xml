<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".procesosPerceptivos.DiscriminacionCategorizacionVisual1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Discriminación y categorización visual"
        android:textSize="30sp" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1PruebaDiscriminizacionVisual"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="invisible"
            app:srcCompat="@drawable/cuadrado" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"></Space>

        <ImageView
            android:id="@+id/img2PruebaDiscriminizacionVisual"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="invisible"
            app:srcCompat="@drawable/cruz" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img3PruebaDiscriminizacionVisual"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="invisible"
            app:srcCompat="@drawable/circulobn" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"></Space>

        <ImageView
            android:id="@+id/img4PruebaDiscriminizacionVisual"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:tag="no"
            android:visibility="invisible"
            app:srcCompat="@drawable/octagono" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img5PruebaDiscriminizacionVisual"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:tag="si"
            android:visibility="invisible"
            app:srcCompat="@drawable/octagono" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"></Space>

        <ImageView
            android:id="@+id/img6PruebaDiscriminizacionVisual"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="invisible"
            app:srcCompat="@drawable/estrella" />

    </LinearLayout>

</LinearLayout>