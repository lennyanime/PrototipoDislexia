<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".procesosPerceptivos.DiscriminacionCategorizacionVisual">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Discriminación y categorización visual"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/btnInstruccionesDiscriminizacionVisual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Instrucciones"
            android:background="#6663C3"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableLeft="@android:drawable/ic_lock_silent_mode_off"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1PruebaDiscriminizacionVisual"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/cuadrado" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"></Space>

        <ImageView
            android:id="@+id/img2PruebaDiscriminizacionVisual"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/cruz"
            android:foreground="?android:attr/selectableItemBackground"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img3PruebaDiscriminizacionVisual"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/circulobn"
            android:foreground="?android:attr/selectableItemBackground"/>

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"></Space>

        <ImageView
            android:id="@+id/img4PruebaDiscriminizacionVisual"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/octagono"
            android:foreground="?android:attr/selectableItemBackground"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img5PruebaDiscriminizacionVisual"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/octagono"
            android:foreground="?android:attr/selectableItemBackground"/>

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"></Space>

        <ImageView
            android:id="@+id/img6PruebaDiscriminizacionVisual"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/estrella"
            android:foreground="?android:attr/selectableItemBackground"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSalirCA"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Salir" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"></Space>

        <Button
            android:id="@+id/btnSiguienteCA"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Siguiente" />

    </LinearLayout>

</LinearLayout>