<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".procesosPerceptivos.DiscriminacionCategorizacionVisual1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/btnInstruccionesDiscriminizacionVisual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Instrucciones"
            android:background="#6663C3"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableLeft="@android:drawable/ic_lock_silent_mode_off"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1PruebaDiscriminizacionVisual"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="invisible"
            app:srcCompat="@drawable/cuadrado" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/img2PruebaDiscriminizacionVisual"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="invisible"
            app:srcCompat="@drawable/cruz" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img3PruebaDiscriminizacionVisual"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="invisible"
            app:srcCompat="@drawable/circulobn" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/img4PruebaDiscriminizacionVisual"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:tag="no"
            android:visibility="invisible"
            app:srcCompat="@drawable/octagono" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img5PruebaDiscriminizacionVisual"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:tag="si"
            android:visibility="invisible"
            app:srcCompat="@drawable/octagono" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/img6PruebaDiscriminizacionVisual"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="invisible"
            app:srcCompat="@drawable/estrella" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnMenuDiscriminacionVisual"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.668" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>