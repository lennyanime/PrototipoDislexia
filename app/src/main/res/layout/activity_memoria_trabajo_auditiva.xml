<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".memoriaDeTrabajo.MemoriaTrabajoAuditiva">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/btnInstruccionesMemoriaTAuditiva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Instrucciones"
                    android:background="#6663C3"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:drawableLeft="@android:drawable/ic_lock_silent_mode_off"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutFila1MemoriaAuditiva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_margin="20dp">

                <Button
                    android:id="@+id/btn_rta1_memoriatrabajoaudtiva"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textAllCaps="false"
                    android:tag="udp"/>

                <Space
                    android:layout_width="50dp"
                    android:layout_height="0dp"/>

                <Button
                    android:id="@+id/btn_rta2_memoriatrabajoaudtiva"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textAllCaps="false"
                    android:tag="udp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutFila2MemoriaAuditiva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_margin="20dp">

                <Button
                    android:id="@+id/btn_rta3_memoriatrabajoaudtiva"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textAllCaps="false"
                    android:tag="udp"/>

                <Space
                    android:layout_width="50dp"
                    android:layout_height="0dp"/>

                <Button
                    android:id="@+id/btn_rta4_memoriatrabajoaudtiva"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textAllCaps="false"
                    android:tag="udp"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="191dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnMenuMemoriaAuditiva"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="MenÃº"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.205"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.888" />

                <Button
                    android:id="@+id/btnSiguienteMemoriaTrabajoAuditiva"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="68dp"
                    android:text="Siguiente"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.888" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>