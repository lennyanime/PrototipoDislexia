                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/imgTriangulo1AtencionSostenida"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="triangulo"
                    app:srcCompat="@drawable/trianglebn" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgCirculo2AtencionSostenida"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="circulo"
                    app:srcCompat="@drawable/circulobn" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/imgEstrella1AtencionSostenida"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="estrella"
                    app:srcCompat="@drawable/estrella" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/imgTrapecio1AtencionSostenida"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="trapecio"
                    app:srcCompat="@drawable/trapecio" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgCuadrado1AtencionSostenida"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="cuadrado"
