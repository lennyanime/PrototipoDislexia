                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/imgCuadrado2AtencionSostenida"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="cuadrado"
                    app:srcCompat="@drawable/cuadrado" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgCruz2AtencionSostenida"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="cruz"
                    app:srcCompat="@drawable/cruz" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/imgEstrella2AtencionSostenida"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="estrella"
                    app:srcCompat="@drawable/estrella" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/imgTrapecio2AtencionSostenida"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:tag="trapecio"
                    app:srcCompat="@drawable/trapecio" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMenuPrincipalAtencionSostenida"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="MenÃº" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
