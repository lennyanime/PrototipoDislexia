<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".competenciasLinguisticas.CompetenciaSintactica">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:gravity="center|center_horizontal"
        android:text="Competencia Sintáctica"
        android:textSize="@dimen/text_size_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/btnInstruccionesCompetenciaSintactica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6663C3"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableLeft="@android:drawable/ic_lock_silent_mode_off"
            android:text="@string/Instrucciones"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/img1CompetenciaSintactica"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="invisible"
            app:srcCompat="@drawable/policialadron" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"></Space>

        <ImageView
            android:id="@+id/img2CompetenciaSintactica"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="invisible"
            app:srcCompat="@drawable/ladronpolicia" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/txtInstruccionCompetenciaSemantica"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center|center_horizontal"
            android:text="El policía está persiguiendo al ladrón"
            android:textSize="20sp"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img3CompetenciaSintactica"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="invisible"
            app:srcCompat="@drawable/policiacarro" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"></Space>

        <ImageView
            android:id="@+id/img4CompetenciaSintactica"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="invisible"
            app:srcCompat="@drawable/policiaperro" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSalirCSintactica"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Salir" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"></Space>

        <Button
            android:id="@+id/btnSiguienteCompetenciaSintactica"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Siguiente" />
    </LinearLayout>



</LinearLayout>